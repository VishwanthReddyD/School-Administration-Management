{
  "name": "college-timetable-management",
  "version": "1.0.0",
  "description": "A secure, role-based timetable system for college administrators and teaching staff",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "db:setup": "cd server && npm run db:setup",
    "db:seed": "cd server && npm run db:seed"
  },
  "keywords": ["timetable", "college", "management", "fullstack", "react", "nodejs"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
